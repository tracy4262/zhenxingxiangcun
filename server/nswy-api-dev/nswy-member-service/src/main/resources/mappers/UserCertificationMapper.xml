<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ovit.nswy.member.mapper.UserCertificationMapper">
	<resultMap id="BaseResultMap" type="com.ovit.nswy.member.model.UserCertification">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="account" property="account" jdbcType="VARCHAR" />
		<result column="sex" property="sex" jdbcType="VARCHAR" />
		<result column="profession" property="profession" jdbcType="VARCHAR" />
		<result column="field" property="field" jdbcType="VARCHAR" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
	</resultMap>
	<sql id="Base_Column_List">
		id, account, sex, profession, field, title, status
	</sql>
	<select id="findUserCertification" resultMap="BaseResultMap"
		parameterType="com.ovit.nswy.member.model.UserCertification">
		select
		<include refid="Base_Column_List" />
		from user_certification
		where account = #{account,jdbcType=VARCHAR}
	</select>

	<insert id="insert" parameterType="com.ovit.nswy.member.model.UserCertification">
		insert into user_certification (id, account, sex,
		profession, field, title,
		status)
		values (#{id,jdbcType=INTEGER}, #{account,jdbcType=VARCHAR},
		#{sex,jdbcType=VARCHAR},
		#{profession,jdbcType=VARCHAR}, #{field,jdbcType=VARCHAR}, #{title,jdbcType=VARCHAR},
		#{status,jdbcType=INTEGER})
	</insert>

	<update id="updateUserCertification" parameterType="com.ovit.nswy.member.model.UserCertification">
		update user_certification
		<set>
			<if test="sex != null">
				sex = #{sex,jdbcType=VARCHAR},
			</if>
			<if test="profession != null">
				profession = #{profession,jdbcType=VARCHAR},
			</if>
			<if test="field != null">
				field = #{field,jdbcType=VARCHAR},
			</if>
			<if test="title != null">
				title = #{title,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=INTEGER},
			</if>
		</set>
		where account = #{account,jdbcType=VARCHAR}
	</update>
</mapper>